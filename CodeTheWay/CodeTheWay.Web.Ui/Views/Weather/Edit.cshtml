@model CodeTheWay.Web.Ui.Models.MyViewModels.WeatherViewModel
@*
    ViewData["Title"] = "Edit";
*@
<h1>Edit</h1>
<form asp-action="UpDate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="HighTemp" class="control-label"></label>
        <input asp-for="HighTemp" class="form-control" value=@Model.HighTemp />
        <span asp-validation-for="HighTemp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LowTemp" class="control-label"></label>
        <input asp-for="LowTemp" class="form-control" value=@Model.LowTemp />
        <span asp-validation-for="LowTemp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvgWindSpeed" class="control-label"></label>
        <input asp-for="AvgWindSpeed" class="form-control" value=@Model.AvgWindSpeed />
        <span asp-validation-for="AvgWindSpeed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" value=@Model.Date />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPrecipitation" class="control-label"></label>
        <input asp-for="TotalPrecipitation" class="form-control" value=@Model.TotalPrecipitation />
        <span asp-validation-for="TotalPrecipitation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" value=@Model.Id />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
